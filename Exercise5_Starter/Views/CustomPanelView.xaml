<UserControl
    x:Class="Exercise5.Views.CustomPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Exercise5.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Exercise5.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>

        <controls:StaggedPanel
            MaxWidth="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            StaggedHeight="60">
            <Image Source="../Assets/Images/image1.jpg" Stretch="UniformToFill" />
            <Image
                controls:StaggedPanel.Expanded="True"
                Source="../Assets/Images/image2.jpg"
                Stretch="UniformToFill" />
            <Image Source="../Assets/Images/image3.jpg" Stretch="UniformToFill" />
            <Image Source="../Assets/Images/image4.jpg" Stretch="UniformToFill" />
        </controls:StaggedPanel>

    </Grid>
</UserControl>
